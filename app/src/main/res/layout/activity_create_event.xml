<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Pole wyboru lokalizacji -->
    <Button
        android:id="@+id/btnLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="btnLocation_click"
        android:text="Choose Location" />

    <!-- Pole wprowadzania daty -->

    <TextView
        android:id="@+id/Hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Paste the pin location"
        android:textSize="20dp"
        android:textAlignment="center"/>

    <EditText
        android:id="@+id/etLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Location" />

    <EditText
        android:id="@+id/etDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Date" />

    <!-- Pole wprowadzania godziny -->
    <EditText
        android:id="@+id/etTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Hour" />

    <!-- Pole wprowadzania ilości uczestników -->

    <!-- Pole wprowadzania nazwy sportu -->
    <EditText
        android:id="@+id/etSportName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Sport" />

    <!-- Pole wyboru czy jest płatne -->

    <!-- Pole wprowadzania kwoty -->
    <EditText
        android:id="@+id/etAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Kwota"
        android:inputType="numberDecimal"
        android:visibility="gone" />

    <!-- Guzik potwierdzający utworzenie -->
    <Button
        android:id="@+id/btnCreate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="btnSend_click"
        android:text="Send SMS" />

</LinearLayout>
